# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# OpenRouter API (for AI classification)
OPENROUTER_API_KEY=your_openrouter_api_key

# Groq API (for STT fallback)
GROQ_API_KEY=your_groq_api_key

# FX API Configuration
FX_API_KEY=your_fx_api_key
FX_API_URL=https://api.exchangerate.host

# Environment Configuration
NODE_ENV=development
VITE_APP_ENV=development

# Feature Flags
VITE_FEATURE_STT_FALLBACK=true
VITE_FEATURE_AI_PARSE_ENABLED=true
VITE_FEATURE_FX_AUTO_FETCH=true
VITE_FEATURE_R3F_BG_ENABLED=true

# Performance & Monitoring
VITE_APP_VERSION=0.1.0
VITE_PERFORMANCE_MONITORING=false

# Development Settings
VITE_DEBUG_MODE=false
VITE_MOCK_API=false

# Google OAuth (for authentication)
VITE_GOOGLE_CLIENT_ID=your_google_client_id

# API Configuration
VITE_API_BASE_URL=http://localhost:3000
VITE_API_TIMEOUT=6000

# PWA Settings
VITE_PWA_ENABLED=true
